[Unit]
Description=PiCam Network Manager
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/home/admin/pi3b-
Environment=PYTHONUNBUFFERED=1
ExecStart=/usr/bin/env bash -lc 'source /home/admin/pi3b-/.venv/bin/activate; exec python /home/admin/pi3b-/firmware/domain/network.py'
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
